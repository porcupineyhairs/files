APP_NAME = 'files'
USER_NAME = 'platform'
SYSTEMD_UWSGI_NAME = 'files-uwsgi'
SYSTEMD_NGINX_NAME = 'files-nginx'

import sys

from syncloud_platform.systemd import systemctl
from syncloud_platform.application import api
from syncloud_platform.gaplib import fs

app_setup = api.get_app_setup(APP_NAME)

app_setup.unregister_web()

systemctl.remove_service(SYSTEMD_NGINX_NAME)
systemctl.remove_service(SYSTEMD_UWSGI_NAME)

app_dir = app_setup.get_install_dir()

fs.removepath(app_dir)

