APP_NAME = 'files'
USER_NAME = 'platform'
SYSTEMD_UWSGI_NAME = 'files-uwsgi'
SYSTEMD_NGINX_NAME = 'files-nginx'

import sys
from os.path import join, isdir
import shutil

from syncloud_platform.tools import app
from syncloud_platform.systemd import systemctl
from syncloud_platform.api import app as platform_app
from syncloud_platform.tools import chown

platform_app.unregister_app(APP_NAME)

systemctl.remove_service(SYSTEMD_NGINX_NAME)
systemctl.remove_service(SYSTEMD_UWSGI_NAME)

app_dir = app.get_app_dir(APP_NAME)

if isdir(app_dir):
    shutil.rmtree(app_dir)


